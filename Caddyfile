{$DOMAIN:localhost} {
	# API and health endpoints
	handle /api/* {
		reverse_proxy api:8000
	}

	handle /health/* {
		reverse_proxy api:8000
	}

	# WebSocket connections
	handle /ws/* {
		reverse_proxy api:8000
	}

	# Everything else â†’ Next.js frontend
	handle {
		reverse_proxy frontend:3000
	}
}
