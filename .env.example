# =============================================================================
# Orbitr (GovTech Sniper) — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Required variables are marked with [REQUIRED].
# All others have sensible defaults for development.
# =============================================================================

# ---- Application ------------------------------------------------------------
DEBUG=true
# [REQUIRED] Generate with: openssl rand -hex 32
SECRET_KEY=
# Generate with: openssl rand -hex 32 (needed for encrypted custom fields)
FIELD_ENCRYPTION_KEY=
# [REQUIRED in prod] Generate with: openssl rand -hex 32
AUDIT_EXPORT_SIGNING_KEY=

# ---- Database ---------------------------------------------------------------
POSTGRES_USER=rfpsniper
POSTGRES_PASSWORD=rfpsniper_secret
POSTGRES_DB=rfpsniper_db
POSTGRES_PORT=5432
# Constructed from above — override only if using external DB
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ---- Redis ------------------------------------------------------------------
REDIS_PORT=6379
# Override only if using external Redis
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/1
# CELERY_RESULT_BACKEND=redis://redis:6379/2

# ---- External APIs ----------------------------------------------------------
# SAM.gov — get a key at https://sam.gov/content/entity-registration
SAM_GOV_API_KEY=
SAM_DOWNLOAD_ATTACHMENTS=true
SAM_MAX_ATTACHMENTS=10
SAM_CIRCUIT_BREAKER_ENABLED=true
SAM_CIRCUIT_BREAKER_COOLDOWN_SECONDS=900
SAM_CIRCUIT_BREAKER_MAX_SECONDS=3600

# Google Gemini — get a key at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# ---- Stripe Billing ---------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STARTER_MONTHLY_PRICE_ID=
STRIPE_STARTER_YEARLY_PRICE_ID=
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=
STRIPE_FREE_TRIAL_DAYS=14

# ---- Email (Resend) ---------------------------------------------------------
EMAIL_ENABLED=false
RESEND_API_KEY=
EMAIL_FROM=Orbitr <notifications@orbitr.io>

# ---- Observability ----------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
LOG_LEVEL=INFO

# ---- CORS -------------------------------------------------------------------
# Comma-separated origins. Set to your domain in production.
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# ---- Ports (dev only — prod uses Caddy on 80/443) --------------------------
API_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555

# ---- Flower (Celery dashboard) ----------------------------------------------
FLOWER_USER=admin
# [REQUIRED in prod] Change this!
FLOWER_PASSWORD=changeme

# ---- Mocking (dev/test only) ------------------------------------------------
MOCK_AI=false
MOCK_SAM_GOV=false

# ---- Uploads ----------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=50

# ---- Domain (prod only — enables automatic HTTPS via Caddy) -----------------
# DOMAIN=app.orbitr.io
